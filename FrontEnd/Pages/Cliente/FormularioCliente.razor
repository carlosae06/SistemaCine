<EditForm Model="clienteInsert" OnValidSubmit="guardar">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="row">
        <label for="username">Nombre de Usuario:</label>
        <InputText id="username" class="form-control" @bind-Value="clienteInsert.UserName"></InputText>
        <ValidationMessage For="@(()=> clienteInsert.UserName)" />
    </div>
    <div class="row">
        <label for="password">Contraseña:</label>
        <InputText id="password" class="form-control" @bind-Value="clienteInsert.Password"></InputText>
        <ValidationMessage For="@(()=> clienteInsert.Password)" />
    </div>

    <div class="row">
        <label for="correo">Correo:</label>
        <InputText id="correo" class="form-control" @bind-Value="clienteInsert.Correo"></InputText>
        <ValidationMessage For="@(()=> clienteInsert.Correo)" />
    </div>
    <div class="row">
        <label for="idpersona">Persona:</label>
        <InputNumber id="idpersona" class="form-control" @bind-Value="clienteInsert.Idpersona"></InputNumber>
        <ValidationMessage For="@(()=> clienteInsert.Idpersona)" />
    </div>
 
