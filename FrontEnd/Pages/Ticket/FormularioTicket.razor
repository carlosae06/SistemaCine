<EditForm Model="ticketInsert" OnValidSubmit="guardar">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="row">
        <label for="cod">Codigo:</label>
        <InputText id="cod" class="form-control" @bind-Value="ticketInsert.Cod"></InputText>
        <ValidationMessage For="@(()=> ticketInsert.Cod)" />
    </div>
    <div class="row">
        <label for="precio">Precio:</label>
        <InputNumber id="precio" class="form-control" @bind-Value="ticketInsert.Precio"></InputNumber>
        <ValidationMessage For="@(()=> ticketInsert.Precio)" />
    </div>

    <div class="row">
        <label for="tipoPago">Tipo de Pago:</label>
        <InputText id="tipoPago" class="form-control" @bind-Value="ticketInsert.TipoPago"></InputText>
        <ValidationMessage For="@(()=> ticketInsert.TipoPago)" />
    </div>
    <div class="row">
        <label for="idButaca">Butaca:</label>
        <InputNumber id="idButaca" class="form-control" @bind-Value="ticketInsert.IdButaca"></InputNumber>
        <ValidationMessage For="@(()=> ticketInsert.IdButaca)" />
    </div>
    <div class="row">
        <label for="idCliente">Cliente:</label>
        <InputNumber id="idCliente" class="form-control" @bind-Value="ticketInsert.IdCliente"></InputNumber>
        <ValidationMessage For="@(()=> ticketInsert.IdCliente)" />
    </div>
    <div class="row">
        <label for="idFunsion">Funsion:</label>
        <InputNumber id="idFunsion" class="form-control" @bind-Value="ticketInsert.IdFunsion"></InputNumber>
        <ValidationMessage For="@(()=> ticketInsert.IdFunsion)" />
    </div>
    <div class="row">
        <label for="idVenta">Venta:</label>
        <InputNumber id="idVenta" class="form-control" @bind-Value="ticketInsert.IdVenta"></InputNumber>
        <ValidationMessage For="@(()=> ticketInsert.IdVenta)" />
    </div>
    <div class="row">
        <label for="idUsuario">Usuario:</label>
        <InputNumber id="idUsuario" class="form-control" @bind-Value="ticketInsert.IdUsuario"></InputNumber>
        <ValidationMessage For="@(()=> ticketInsert.IdUsuario)" />
    </div>
    @if (modo == "Modificar")
    {
        @*   <div class="mb-3 row">

    <label for="url">Nombre:</label>
    <div class="col-sm-8">
    <InputCheckbox id="nombre" class="form-control" @bind-Value="@ticketInsert.Nombre"></InputCheckbox>
    <ValidationMessage For="@(()=> ticketInsert.Nombre)" />
    </div>

    </div>*@
    }

    <br />
    <div class="row">
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>


</EditForm>

@code {

    [Parameter] public string modo { get; set; } = "crear";
    private DTOs.Ticket.TicketActualizarDTO ticketInsert = new DTOs.Ticket.TicketActualizarDTO();

    private async Task guardar()
    {
        await Task.Delay(2000);
    }
}
