@using Peliculas.DTOs


<EditForm Model="SeccionInsertar" OnValidSubmit="guardar">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="row" >
         <label for="cod" >Cod:</label>
         <InputText id="cod" class="form-control" @bind-Value="SeccionInsertar.Cod" ></InputText>
        <ValidationMessage For="@(()=> SeccionInsertar.Cod)" />
    </div>
     <div class="row">
        <label for="idSala">Sala:</label>
        <InputNumber id="idSala" class="form-control" @bind-Value="SeccionInsertar.IdSala"></InputNumber>
        <ValidationMessage For="@(()=> SeccionInsertar.IdSala)" />
    </div>

    @if (modo == "Modificar")
    {
         <div class="mb-3 row">
         
         <label for="url" >Estado:</label>
         <div class="col-sm-8">
                <InputCheckbox id="estado" class="form-control" @bind-Value="@SeccionInsertar.Estado"></InputCheckbox>
                <ValidationMessage For="@(()=> SeccionInsertar.Estado)" />
         </div>
        
         </div>
    }

    <br />
    <div class="row" >
         <button type="submit" class="btn btn-primary" >Guardar</button>
    </div>
   

</EditForm>



@code {
    [Parameter] public string modo { get; set; } = "crear";
    private SeccionActualizarDTO SeccionInsertar = new SeccionActualizarDTO();

    private async Task guardar()
    {
       

        await Task.Delay(2000);

    }
}